    <!--Modals-->
    <!-- Modal Login / Cadastro -->
    <div id="loginCadastro" class="modal fade" role="dialog" style="background-image: url('{{base_url()}}/assets/img/header-bg.jpg');">
        <div class="modal-dialog">
            <!-- Modal content-->

                <div class="modal-body">
                    <div class="panel panel-info" style="border-color:#F1BB04;">
                      <div class="panel-heading" style="background-color:#F1BB04; color:#fff;">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h3 class="panel-title">Área de Acesso</h3>
                      </div>
                        <div class="panel-body">
                      
                            <div class="row-fluid">
                          
                                <div class="col-md-5" >
                                    </br>
                                    <a href="{{url_face}}" class="btn btn-block btn-social btn-facebook" style="text-align: left; color:#fff;background:#3B5998;" id="facebook">
                                        <span class="fa fa-facebook"></span>
                                        Entrar com Facebook
                                    </a><br/>

                                    <a class="btn btn-block btn-social btn-google" style="text-align: left; color:#fff;background:#DD4B39;">
                                        <span class="fa fa-google"></span>
                                        Entrar com Google
                                    </a><br/>

                                </div>

                                <div class="col-md-7" style="border-left:1px solid #F1BB04;height:160px">
                                    <form class="form-horizontal" action="/login" method="post">
                                        <fieldset>
                                            {% if erros.login %}
                                                <span style="color:#B84442;">{{erros.login | first}}</span>
                                            {% endif %}
                                            <input id="textinput" name="login" type="text" placeholder="Login" class="form-control input-md" value="{{recarregaDados.login}}"></br>
                                            {% if erros.senha %}
                                                <span style="color:#B84442;">{{erros.senha | first}}</span>
                                            {% endif %}
                                            <input id="textinput" name="senha" type="password" placeholder="Senha" class="form-control input-md">
                                            {{htmlHidden.html | raw}}
                                            <div class="spacing"><a href="#"><small> Esqueceu sua Senha?</small></a><br/></div>
                                            <button id="singlebutton" style="background-color:#F1BB04;" name="singlebutton" class="btn btn-warning btn-sm pull-right">Entrar</button>
                                            </br></br></br>
                                        </fieldset>
                                    </form>
                                </div>
                            
                            </div>
                        
                        </div>
                    </div>
                </div>
        </div>
    </div>


    <div id="cadastro" class="modal fade" role="dialog" style="background-image: url('{{base_url()}}/assets/img/header-bg.jpg');">
        <div class="modal-dialog">
            <!-- Modal content-->

                <div class="modal-body">
                    <div class="panel panel-info" style="border-color:#F1BB04;">
                      <div class="panel-heading" style="background-color:#F1BB04; color:#fff;">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h3 class="panel-title">Cadastro</h3>
                      </div>
                        <div class="panel-body">
                      
                            <div class="container-fluid">
                                <div class="row">
                          
                                <form action="/cadastroUsuario" method="post" accept-charset="utf-8">

                                    <input type="hidden" name="id_face" id="id_face" value="{{id_cadastro}}">
                                    <div class="form-group">
                                        <label for="nome">Nome:</label>
                                        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" value="{{nome_cadastro}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="login">Login:</label>
                                        <input type="text" class="form-control" id="login" name="login" placeholder="Login">
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email:</label>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label for="pwd">Senha:</label>
                                        <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha">
                                    </div>
                                    {{htmlHidden.html | raw}}
                                    <button type="submit" class="btn btn-default">Cadastrar</button>
                                </form>
                                </div>
                            
                            </div>
                        
                        </div>
                    </div>
                </div>
        </div>
    </div>




    <script>
        {% if nome_cadastro %}    
            onload=function(){
                $("#cadastro").modal('show');
            }
