<!DOCTYPE html>
<html>
{% include "partes/css.twig" %}
<!--Start Header-->

<style type="text/css">

</style>

<body>
{% include "partes/head.twig" %}
<!--Start Container-->
<div id="main" class="container-fluid">
	<div class="row">
		<div id="sidebar-left" class="col-xs-2 col-sm-2">
			<!--menu-->
			{% include "partes/menu.twig" %}
		</div>
		<!--Start Content-->
		<div id="content" class="col-xs-12 col-sm-10">			
			<br><br>
			<div class="container-fluid">
				<div class="row content">
					<div class="col-sm-9">
						<h1 class="tituloEscreve meustextos" >Meus Escritos</h1>
						<hr style="border-color:#fff;">
						
						<ul class="timeline" style="border-color:red;">


							{% for item in timeline %}
							<li>
								<div class="timeline-badge"><img src="{{base_url()}}/assets/rede/img/user/{{item.img}}" alt="" width="50" height="50" style="border-radius: 30px;"></div>
								<div class="timeline-panel" style="background-color:#fff;">
									<div class="timeline-heading">
										<a href="#" class="head_post" id="cabeca-{{item.id}}" onclick="chamaCorpoPost(this.id)"><h4 class="timeline-title">{{item.titulo}} > {{item.tipo}} > {{item.privacidade}} </h4></a>
										<p>
											<small class="text-muted">
												<i class="fa fa-clock-o" aria-hidden="true" style="color:#9999A5;"></i> {{item.data}}
												<br>	
												<a style="color:#F1BB04; text-decoration: none;">
													
												{% if item.statusCurtida == 0 %}
													<i id="s{{item.id}}" class="fa fa-heart-o" aria-hidden="true" onclick="curtir({{item.id}},{{item.id_login}})" value='{{item.id}}'></i> <i id="valorLike{{item.id}}">
													{{item.qtdLikes}}
													</i>
													
												{% else %}
													<i id="s{{item.id}}" class="fa fa-heart" aria-hidden="true" onclick="curtir({{item.id}},{{item.id_login}})" value='{{item.id}}'></i> <i id="valorLike{{item.id}}">
													{{item.qtdLikes}}
													</i>
												{% endif %}

												<i id="c{{item.id}}" class="fa fa-comments-o" aria-hidden="true" onclick="comentar({{item.id}}, {{item.id_login}})"></i><i id="valorcomentarios{{item.id}}">
												{{item.qtdComentarios}}
												</i>
												
												{% if item.statusFavoritos == 0 %}
													<i id="favorito{{item.id}}" class="fa fa-star-o" aria-hidden="true" onclick="favoritar({{item.id}},{{item.id_login}})" value='{{item.id}}'>
													</i>
												{% else %}
													<i id="favorito{{item.id}}" class="fa fa-star" aria-hidden="true" onclick="favoritar({{item.id}},{{item.id_login}})" value='{{item.id}}'></i> 
												{% endif %}
												</a>
											</small>
										</p>
									</div>

									
									<div class="row">
									<div class="col-md-6">
										<div class="timeline-body" id="corpo-{{item.id}}">
											<p style="text-align:justify; font-size:14px; line-height:1.5;">
											{{item.conteudo | raw }}
											</p>
										</div>
									</div>
									</div>
									<!--Mostrar e adicionar comentario-->
									<div class="timeline-body" id="comentario{{item.id}}"><br>
										<div class="" id="coment{{item.id}}"></div>
										<div class="row"><br>
											<div class="col-md-1">
												<img src="{{base_url()}}/assets/rede/img/user/{{item.foto}}" alt="" width="50" height="50" style="border-radius: 30px;">
											</div>

											<div class="col-md-6">
												<textarea type="text" id="comentariotext{{item.id}}" class="form-control" > </textarea></div><br>
										</div>

										<div class="col-md-6 col-md-offset-6" > 
											<button class="btn btn-warning" onclick="salvarComentario({{item.id}},{{item.id_login}})">   Okay  </button>
										</div>
									</div>
								</div>
							</li>
							{% endfor %}
						</ul>


					</div>
					<div class="col-sm-3 sidenav">
						<div class="input-group">
							<input type="text" class="form-control" id="buscaE" name="buscaE" placeholder="Buscar"  onkeydown="buscaMinhasEscritas()">
							<span class="input-group-btn">
								<button class="btn btn-default" type="button">
									<i class="fa fa-search" aria-hidden="true"></i>
								</button>
							</span>
						</div>
						<ul class="nav nav-pills nav-stacked">
							
							<li id="pesquisaE" class="meustextos" >
								{% for item in timeline %}
									<a href="#section1" >{{item.titulo}}</a>
								{% endfor %}
							</li>
							<!-- <li><a href="#section1" class="meustextos">Eu, Ele e Elas.</a></li>
							<li><a href="#section2" class="meustextos">Pequeno Homem</a></li>
							<li><a href="#section3" class="meustextos">Grande Familia</a></li>
							<li><a href="#section3" class="meustextos">Efeito Borboleta</a></li> -->
						</ul>
					</div>
				</div>
			</div>








		</div>
		<!--End Content-->
	</div>
</div>
<!--End Container-->
