<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script type="text/javascript">
	
	function chamaCorpoPost(id){
		i=id.split("-");
	    $('#corpo-'+i[1]).toggle(); // p00f
	}
</script>
</script>


