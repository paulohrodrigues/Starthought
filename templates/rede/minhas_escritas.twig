<script src="{{base_url()}}/assets/rede/js/devoops.js"></script>
<script src="{{base_url()}}/assets/timeline/js/jquery-2.1.4.js"></script>
<script src="{{base_url()}}/assets/timeline/js/jquery.mobile.custom.min.js"></script>
